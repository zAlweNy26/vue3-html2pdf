{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["src/**/*", "src/**/*.vue", "types.d.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "noEmit": false,
    "moduleResolution": "Bundler",
    "declarationDir": "./types",
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "baseUrl": ".",
    "rootDir": ".",
    "types": ["vite/client"],
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
